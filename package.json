{
  "name": "fountain-js",
  "version": "1.0.0",
  "description": "ScriptAIble Template - Professional screenplay editing foundation",
  "main": "dist/index.js",
  "module": "dist.esm/index.js",
  "scripts": {
    "clean": "rimraf dist dist.esm",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b",
    "build:esm": "tsc -b ./tsconfig.esm.json",
    "dev": "npm run build && cd editor && npm run dev",
    "test": "jasmine",
    "editor:install": "cd editor && npm install",
    "editor:build": "cd editor && npm run build"
  },
  "keywords": [
    "screenplay",
    "screenwriting",
    "fountain",
    "template",
    "typescript",
    "react",
    "editor",
    "final-draft",
    "pdf-export",
    "filmmaking"
  ],
  "homepage": "https://github.com/yourusername/scriptaible-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/scriptaible-template.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/scriptaible-template/issues"
  },
  "author": "Template Author",
  "contributors": [
    "ScriptAIble Template Contributors"
  ],
  "license": "MIT",
  "private": false,
  "template": true,
  "devDependencies": {
    "@types/jasmine": "^5.1.2",
    "jasmine": "^5.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.7.0",
    "typescript": "^5.2.2"
  }
}
